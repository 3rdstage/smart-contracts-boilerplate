// https://marketplace.visualstudio.com/items?itemName=streetsidesoftware.code-spell-checker
// https://marketplace.visualstudio.com/items?itemName=streetsidesoftware.code-spell-checker#customization
// https://github.com/streetsidesoftware/vscode-spell-checker
{
  "version": "0.2",
  "language": "en",
  "words": [
    "consolas", // Fonts
    "lucida",
    "menlo",
    "webp", // Extensions
    "websocket", // Techonology Geneal
    "reentrancy",
    "emscripten", // https://emscripten.org/
    "addn", // `bn.js`
    "subn",
    "pickone", // `chance.js`
    "pickset"
  ],
  "flagWords": [
    "hte"
  ],
  "enableFiletypes": [
    "solidity"
  ],
  "ignorePaths": [ ],
  "patterns": [
    { "name" : "ipfs-url", "pattern": "/(?:ipfs|http|https)://.*Qm[0-9A-Za-z]*/"}
  ],
  "ignoreRegExpList": ["ipfs-url"],
  "languageSettings": [
    {
      "languageId": "python",
      "allowCompoundWords": true,
      "dictionaries": [
        "python"
      ]
    }
  ],
  "overrides": [
    {
      // https://jshint.com/docs/options/
      "filename": ".jshintrc",
      "words": [
        "esversion", "forin", "latedef", "nofunc", "noarg", "nonew", "quotmark"]
    }
  ],
  "dictionaries": ["abbrev", "software", "hardware", "asciidoc", "web3"],
  "dictionaryDefinitions": [
    { "name": "abbrev", "path": "./cspell/abbrev.txt", "addWords": true },
    { "name": "software", "path": "./cspell/software.txt", "addWords": true },
    { "name": "hardware", "path": "./cspell/hardware.txt", "addWords": true },
    { "name": "asciidoc", "path": "./cspell/asciidoc.txt", "addWords": true },
    { "name": "web3", "path": "./cspell/web3.txt", "addWords": true }
  ]

}
