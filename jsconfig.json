{
  // https://www.typescriptlang.org/tsconfig
  // https://code.visualstudio.com/docs/languages/jsconfig
  // https://github.com/microsoft/TypeScript/wiki/JavaScript-Language-Service-in-Visual-Studio

  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "./types"],
    "types": ["node", "chai", "mocha", "chance", "truffle-contracts"],
    "strict": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "skipLibCheck": true
  },
  "include": ["types/**/*.ts", "migrations/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist", "build", "cache", "artifacts"]
}